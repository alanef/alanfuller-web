
---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "WordPress Security & Website Monitoring Solutions by Alan Fuller - 12+ years building tools that keep business websites running smoothly" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- AI/LLM Indexing -->
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
		<meta name="googlebot" content="index, follow" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Alan Fuller</title>
		
		<!-- Preconnect to external origins -->
		<link rel="preconnect" href="https://analytics.fw9.uk">
		
		<!-- Preload critical resources -->
		<link rel="preload" href="/fonts/inter.css" as="style">
		<link rel="preload" href="/images/alanfuller-desktop.jpg" as="image" media="(min-width: 768px)">
		<link rel="preload" href="/images/alanfuller-mobile.jpg" as="image" media="(max-width: 767px)">
		
		<!-- Fonts -->
		<link rel="stylesheet" href="/fonts/inter.css">
		
		<!-- Open Graph -->
		<meta property="og:title" content={title + " - Alan Fuller"} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://alanfuller.co.uk" />
		<meta property="og:image" content="https://alanfuller.co.uk/images/alanfuller-og.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title + " - Alan Fuller"} />
		<meta name="twitter:description" content={description} />
		
		<!-- Umami Analytics -->
		<script defer src="https://analytics.fw9.uk/script.js" data-website-id="88073fa7-c770-42d9-b1c5-48f275f73bd4"></script>
		
		<!-- Structured Data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Alan Fuller - Fullworks Digital Ltd",
			"url": "https://alanfuller.co.uk",
			"description": "WordPress Security & Website Monitoring Solutions by Alan Fuller",
			"publisher": {
				"@type": "Organization",
				"name": "Fullworks Digital Ltd",
				"legalName": "FULLWORKS DIGITAL LTD",
				"identifier": "07720957",
				"foundingDate": "2011",
				"address": {
					"@type": "PostalAddress",
					"addressCountry": "GB"
				},
				"founder": {
					"@type": "Person",
					"name": "Alan Fuller",
					"url": "https://alanfuller.co.uk",
					"sameAs": [
						"https://www.linkedin.com/in/aefuller/",
						"https://x.com/alanefuller",
						"https://youtube.com/@alanfuller",
						"https://profiles.wordpress.org/alanfuller"
					],
					"jobTitle": "Systems & Web Expert for Small Business Success",
					"knowsAbout": ["WordPress Security", "Website Monitoring", "WhatsApp Business API", "Software Development", "Cloud Computing"]
				}
			}
		}
		</script>
	</head>
	<body class="min-h-screen bg-white text-gray-900 font-inter antialiased">
		<slot />
		
		<style is:global>
			:root {
				--color-primary: #1e3a8a; /* Deep blue */
				--color-primary-dark: #1e40af;
				--color-accent: #f97316; /* Orange accent */
				--color-gray-50: #f9fafb;
				--color-gray-100: #f3f4f6;
			}
			
			html {
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
			}
			
			.font-inter {
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
			}
			
			/* Smooth scroll behavior */
			html {
				scroll-behavior: smooth;
			}
			
			/* Better focus styles */
			*:focus {
				outline: 2px solid var(--color-primary);
				outline-offset: 2px;
			}
			
			/* Typography scale */
			.text-hero {
				font-size: clamp(2.5rem, 5vw, 4.5rem);
				line-height: 1.1;
				font-weight: 900;
			}
			
			.text-section-title {
				font-size: clamp(2rem, 4vw, 3rem);
				line-height: 1.2;
				font-weight: 800;
			}
		</style>
	</body>
</html>