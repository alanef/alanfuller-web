		<meta name="googlebot" content="index, follow" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Alan Fuller</title>
		
		<!-- Preconnect to external origins -->
		<link rel="preconnect" href="https://analytics.fw9.uk">
		
		<!-- Preload critical resources -->
		<link rel="preload" href="/fonts/inter.css" as="style">
		<link rel="preload" href="/images/alanfuller-small.jpg" as="image" media="(max-width: 640px)">
		<link rel="preload" href="/images/alanfuller-mobile.jpg" as="image" media="(min-width: 641px) and (max-width: 768px)">
		<link rel="preload" href="/images/alanfuller-desktop.jpg" as="image" media="(min-width: 769px)">
		
		<!-- Fonts -->
		<link rel="stylesheet" href="/fonts/inter.css">
		
		<!-- Open Graph -->
		<meta property="og:title" content={title + " - Alan Fuller"} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://alanfuller.co.uk" />
		<meta property="og:image" content="https://alanfuller.co.uk/images/alanfuller-og.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title + " - Alan Fuller"} />
		<meta name="twitter:description" content={description} />
		
		<!-- Umami Analytics -->
		<script defer src="https://analytics.fw9.uk/script.js" data-website-id="88073fa7-c770-42d9-b1c5-48f275f73bd4"></script>
		
		<!-- Structured Data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Alan Fuller - Fullworks Digital Ltd",
			"url": "https://alanfuller.co.uk",
			"description": "WordPress Security & Website Monitoring Solutions by Alan Fuller",
			"publisher": {
				"@type": "Organization",
				"name": "Fullworks Digital Ltd",
				"legalName": "FULLWORKS DIGITAL LTD",
				"identifier": "07720957",
				"foundingDate": "2011",
				"address": {
					"@type": "PostalAddress",
					"addressCountry": "GB"
				},
				"founder": {
					"@type": "Person",
					"name": "Alan Fuller",
					"url": "https://alanfuller.co.uk",
					"sameAs": [
						"https://www.linkedin.com/in/aefuller/",
						"https://x.com/alanefuller",
						"https://youtube.com/@alanfuller",
						"https://profiles.wordpress.org/alanfuller"
					],
					"jobTitle": "Systems & Web Expert for Small Business Success",
					"knowsAbout": ["WordPress Security", "Website Monitoring", "WhatsApp Business API", "Software Development", "Cloud Computing"]
				}
			}
		}
		</script>
	</head>
	<body class="min-h-screen bg-white text-gray-900 font-inter antialiased">
		<slot />
		
		<script>
			// Enhanced email protection with multiple obfuscation layers
			function initEmailProtection() {
			  // Add CSS for email display
			  const style = document.createElement('style');
			  style.textContent = `
			    .email-protected {
			      cursor: pointer;
			    }
			    .email-protected::before {
			      content: attr(data-user);
			    }
			    .email-protected::after {
			      content: "@" attr(data-domain);
			    }
			    .email-protected .email-obfuscated {
			      display: none;
			    }
			    .email-protected .email-placeholder {
			      display: none;
			    }
			  `;
			  document.head.appendChild(style);

			  const emailLinks = document.querySelectorAll('.email-link');
			  
			  emailLinks.forEach(link => {
			    // Get the encoded parts
			    const userEncoded = link.dataset.user;
			    const domainEncoded = link.dataset.domain;
			    
			    // Decode the parts (they'll be base64 encoded)
			    const user = atob(userEncoded);
			    const domain = atob(domainEncoded);
			    
			    // Create obfuscated display with fake domain
			    const obfuscatedSpan = document.createElement('span');
			    obfuscatedSpan.className = 'email-obfuscated';
			    obfuscatedSpan.textContent = user + '@fake-domain.invalid';
			    
			    // Set the real email parts as data attributes for CSS
			    link.dataset.user = user;
			    link.dataset.domain = domain;
			    
			    // Clear all content and whitespace
			    link.textContent = '';
			    
			    // Add the obfuscated span
			    link.appendChild(obfuscatedSpan);
			    
			    // Add the protected class to trigger CSS display
			    link.classList.add('email-protected');
			    
			    // Set up the mailto link on click to avoid having it in the DOM
			    link.addEventListener('click', function(e) {
			      e.preventDefault();
			      const email = user + '@' + domain;
			      window.location.href = 'mailto:' + email;
			    });
			    
			    // Remove the href to prevent scrapers from finding it
			    link.removeAttribute('href');
			    
			    // Add additional protection against right-click inspection
			    link.addEventListener('contextmenu', function(e) {
			      e.preventDefault();
			      return false;
			    });
			  });
			}

			// Initialize on DOM ready
			if (document.readyState === 'loading') {
			  document.addEventListener('DOMContentLoaded', initEmailProtection);
			} else {
			  initEmailProtection();
			}
		</script>
		
		<style is:global>
			:root {
				--color-primary: #1e3a8a; /* Deep blue */
				--color-primary-dark: #1e40af;
				--color-accent: #f97316; /* Orange accent */
				--color-gray-50: #f9fafb;
				--color-gray-100: #f3f4f6;
			}
			
			html {
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
			}
			
			.font-inter {
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
			}
			
			/* Smooth scroll behavior */
			html {
				scroll-behavior: smooth;
			}
			
			/* Better focus styles */
			*:focus {
				outline: 2px solid var(--color-primary);
				outline-offset: 2px;
			}
			
			/* Typography scale */
			.text-hero {
				font-size: clamp(2rem, 4vw, 3.5rem);
				line-height: 1.1;
				font-weight: 900;
			}
			
			.text-section-title {
				font-size: clamp(2rem, 4vw, 3rem);
				line-height: 1.2;
				font-weight: 800;
			}
		</style>
	</body>
</html>