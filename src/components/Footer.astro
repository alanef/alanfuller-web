---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'LinkedIn', url: '#', icon: 'linkedin' },
  { name: 'YouTube', url: '#', icon: 'youtube' }
];
---

<footer class="bg-[#1e3a8a] text-white py-16">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8">
        <h3 class="text-3xl font-bold mb-3">Building Tools That Actually Work</h3>
        <p class="text-xl text-blue-100 mb-6">
          From WhatsApp marketing to WordPress security - discover solutions built for real businesses
        </p>
        <a 
          href="/#projects" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#1e3a8a] font-bold text-lg hover:bg-gray-100 transition-colors"
        >
          Explore My Solutions
        </a>
      </div>
      
      <div class="pt-8 mt-8 border-t border-blue-800">
        <div class="mb-6">
          <a 
            href="#" 
            class="text-lg text-blue-100 hover:text-white transition-colors font-medium email-link"
            data-user="alan"
            data-domain="alanfuller.co.uk"
          >
            <span class="email-placeholder">Contact Email</span>
          </a>
        </div>
        
        <div class="flex justify-center space-x-6 mb-6">
          {socialLinks.map((link) => (
            <a 
              href={link.url} 
              class="text-blue-200 hover:text-white transition-colors"
              aria-label={link.name}
            >
            {link.icon === 'linkedin' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
            {link.icon === 'youtube' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
              </svg>
            )}
          </a>
        ))}
        </div>
        
        <p class="text-blue-200 text-sm">
          Â© {currentYear} Alan Fuller. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  // Email protection - decode and display email addresses
  document.addEventListener('DOMContentLoaded', function() {
    const emailLinks = document.querySelectorAll('.email-link');
    
    emailLinks.forEach(link => {
      const user = link.dataset.user;
      const domain = link.dataset.domain;
      const email = user + '@' + domain;
      
      // Update the link
      link.href = 'mailto:' + email;
      
      // Update the display text
      const placeholder = link.querySelector('.email-placeholder');
      if (placeholder) {
        placeholder.textContent = email;
      }
    });
  });
</script>