---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/aefuller/', icon: 'linkedin' },
  { name: 'X (Twitter)', url: 'https://x.com/alanefuller', icon: 'twitter' },
  { name: 'YouTube', url: 'https://www.youtube.com/@AlanFullerTech', icon: 'youtube' },
  { name: 'WordPress.org', url: 'https://profiles.wordpress.org/alanfuller', icon: 'wordpress' }
];
---

<footer class="bg-[#1e3a8a] text-white py-16">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8">
        <h3 class="text-3xl font-bold mb-3">Building Tools That Actually Work</h3>
        <p class="text-xl text-blue-100 mb-6">
          From WhatsApp marketing to WordPress security - discover solutions built for real businesses
        </p>
        <a 
          href="/#projects" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#1e3a8a] font-bold text-lg hover:bg-gray-100 transition-colors"
        >
          Explore My Solutions
        </a>
      </div>
      
      <div class="pt-8 mt-8 border-t border-blue-800">
        <div class="mb-6">
          <a 
            href="#" 
            class="text-lg text-blue-100 hover:text-white transition-colors font-medium email-link"
            data-user="YWxhbg=="
            data-domain="YWxhbmZ1bGxlci5jby51aw=="
          >
            <span class="email-placeholder">Contact information protected</span>
          </a>
        </div>
        
        <div class="flex justify-center space-x-6 mb-6">
          {socialLinks.map((link) => (
            <a 
              href={link.url} 
              class="text-blue-200 hover:text-white transition-colors"
              aria-label={link.name}
              target="_blank"
              rel="noopener noreferrer"
              data-umami-event="outbound-link-click"
              data-umami-event-url={link.url}
            >
            {link.icon === 'linkedin' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
            {link.icon === 'twitter' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            )}
            {link.icon === 'youtube' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
              </svg>
            )}
            {link.icon === 'wordpress' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M21.469 6.825c.84 1.537 1.318 3.3 1.318 5.175 0 3.979-2.156 7.456-5.363 9.325l3.295-9.527c.615-1.54.82-2.771.82-3.864 0-.405-.026-.78-.07-1.11m-7.981.105c.647-.03 1.232-.105 1.232-.105.582-.075.514-.93-.067-.899 0 0-1.755.135-2.88.135-1.064 0-2.85-.15-2.85-.15-.585-.03-.661.855-.075.885 0 0 .54.061 1.125.09l1.68 4.605-2.37 7.08L5.354 6.9c.649-.03 1.234-.1 1.234-.1.585-.075.516-.93-.065-.896 0 0-1.746.138-2.874.138-.2 0-.438-.008-.69-.015C4.911 3.15 8.235 1.215 12 1.215c2.809 0 5.365 1.072 7.286 2.833-.046-.003-.091-.009-.141-.009-1.06 0-1.812.923-1.812 1.914 0 .89.513 1.643 1.06 2.531.411.72.89 1.643.89 2.977 0 .915-.354 1.994-.821 3.479l-1.075 3.585-3.9-11.61.001.014zM12 22.784c-1.059 0-2.081-.153-3.048-.437l3.237-9.406 3.315 9.087c.024.053.05.101.078.149-1.12.393-2.325.609-3.582.609M1.211 12c0-1.564.336-3.05.935-4.39L7.29 21.709C3.694 19.96 1.212 16.271 1.211 12M12 0C5.385 0 0 5.385 0 12s5.385 12 12 12 12-5.385 12-12S18.615 0 12 0"/>
              </svg>
            )}
          </a>
        ))}
        </div>
        
        <p class="text-blue-200 text-sm">
          Â© {currentYear} Alan Fuller. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>