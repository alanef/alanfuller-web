<section class="relative overflow-hidden py-24 md:py-32 lg:py-40">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-gray-50">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-transparent"></div>
  </div>
  
  <div class="relative container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-16 items-center">
      <!-- Content -->
      <div class="order-2 md:order-1 max-w-xl">
        <p class="text-[#f97316] font-bold text-sm uppercase tracking-wider mb-4">Trusted by 80,000+ Businesses Worldwide</p>
        <h1 class="text-hero text-gray-900 mb-6">
          I Build Tools That Keep Small Businesses Running
        </h1>
        <p class="text-xl lg:text-2xl text-gray-700 mb-10 leading-relaxed">
          From mainframes to modern web to AI - I've solved business problems through every tech revolution. Now I build WordPress plugins, monitoring systems, and messaging solutions that actually work.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="#projects" 
            class="inline-flex items-center justify-center px-8 py-4 bg-[#1e3a8a] text-white font-bold text-lg hover:bg-[#1e40af] transition-colors"
          >
            See My Solutions
          </a>
          <a 
            href="/contact" 
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#1e3a8a] font-bold text-lg border-2 border-[#1e3a8a] hover:bg-gray-50 transition-colors"
          >
            Get Free Consultation
          </a>
        </div>
      </div>
      
      <!-- Professional Photo -->
      <div class="order-1 md:order-2 flex justify-center md:justify-end">
        <div class="relative group">
          <!-- Decorative background element -->
          <div class="absolute -inset-4 bg-gradient-to-br from-blue-100 via-blue-50 to-orange-50 opacity-60 group-hover:opacity-80 transition-opacity duration-500"></div>
          
          <!-- Image container with enhanced styling -->
          <div class="relative">
            <!-- Subtle pattern overlay -->
            <div class="absolute inset-0 bg-gradient-to-tr from-blue-900/10 via-transparent to-orange-500/10 pointer-events-none z-10"></div>
            
            <img 
              src="/images/alanfuller-small.jpg"
              srcset="/images/alanfuller-small.jpg 256w, /images/alanfuller-mobile.jpg 400w, /images/alanfuller-desktop.jpg 800w"
              sizes="(max-width: 640px) 256px, (max-width: 768px) 320px, (max-width: 1024px) 384px, 448px"
              alt="Alan Fuller"
              fetchpriority="high"
              loading="eager"
              decoding="async"
              class="w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 xl:w-[28rem] xl:h-[28rem] object-cover shadow-2xl ring-4 ring-white/50 group-hover:scale-[1.02] transition-transform duration-500"
            />
            
            <!-- Bottom accent line -->
            <div class="absolute bottom-0 left-8 right-8 h-1 bg-gradient-to-r from-transparent via-[#1e3a8a] to-transparent rounded-full opacity-60"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>