---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact" description="Get in touch with Alan Fuller for WordPress security and website monitoring solutions">
  <Header />
  
  <main class="flex-grow">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-gray-50 to-gray-100 py-16">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-8">
          Get In Touch
        </h1>
        <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto">
          Let's discuss how I can help your business stay secure and successful online
        </p>
      </div>
    </section>
    
    <!-- Contact Section -->
    <section class="py-16">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto">
          <!-- Main Contact Info -->
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">
              Let's Talk About Your Project
            </h2>
            <p class="text-xl text-gray-700 mb-8">
              Whether you need help with website monitoring, WordPress security, or strategic technical guidance, I'm here to help.
            </p>
            
            <!-- Primary Email CTA -->
            <div class="bg-[#1e3a8a] text-white p-8 mb-12">
              <p class="text-lg mb-4">The best way to reach me:</p>
              <a href="#" class="text-3xl font-bold hover:underline email-link" data-user="alan" data-domain="alanfuller.co.uk">
                <span class="email-placeholder">Email address loading, please wait</span>
              </a>
            </div>
          </div>
          
          <!-- Additional Info Grid -->
          <div class="grid md:grid-cols-3 gap-8 mb-12">
            <div class="text-center">
              <div class="w-12 h-12 bg-gray-100 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-6 h-6 text-[#1e3a8a]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Response Time</h3>
              <p class="text-gray-700">Usually within 24 hours</p>
            </div>
            
            <div class="text-center">
              <div class="w-12 h-12 bg-gray-100 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-6 h-6 text-[#1e3a8a]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Location</h3>
              <p class="text-gray-700">United Kingdom</p>
            </div>
            
            <div class="text-center">
              <div class="w-12 h-12 bg-gray-100 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-6 h-6 text-[#1e3a8a]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Availability</h3>
              <p class="text-gray-700">Open to new projects</p>
            </div>
          </div>
          
          <!-- What to Expect -->
          <div class="bg-gray-50 border border-gray-200 p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4 text-center">What Happens Next?</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <h4 class="font-semibold text-gray-900 mb-3">For Product Inquiries:</h4>
                <ul class="space-y-2 text-gray-700">
                  <li class="flex items-start">
                    <span class="text-[#1e3a8a] mr-2">→</span>
                    Quick demo if needed
                  </li>
                  <li class="flex items-start">
                    <span class="text-[#1e3a8a] mr-2">→</span>
                    Help with setup and configuration
                  </li>
                  <li class="flex items-start">
                    <span class="text-[#1e3a8a] mr-2">→</span>
                    Ongoing support available
                  </li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-3">For Technical Audits:</h4>
                <ul class="space-y-2 text-gray-700">
                  <li class="flex items-start">
                    <span class="text-[#1e3a8a] mr-2">→</span>
                    Initial consultation call
                  </li>
                  <li class="flex items-start">
                    <span class="text-[#1e3a8a] mr-2">→</span>
                    Clear scope and pricing
                  </li>
                  <li class="flex items-start">
                    <span class="text-[#1e3a8a] mr-2">→</span>
                    Actionable recommendations
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  // Email protection - decode and display email addresses
  document.addEventListener('DOMContentLoaded', function() {
    const emailLinks = document.querySelectorAll('.email-link');
    
    emailLinks.forEach(link => {
      const user = link.dataset.user;
      const domain = link.dataset.domain;
      const email = user + '@' + domain;
      
      // Update the link
      link.href = 'mailto:' + email;
      
      // Update the display text
      const placeholder = link.querySelector('.email-placeholder');
      if (placeholder) {
        placeholder.textContent = email;
      }
    });
  });
</script>

